#!/sbin/msh

onexit /sbin/reboot

/sbin/kmount -vc /dev
reopen /dev/console

/sbin/kmount -vc /sys
/sbin/kmount -vc /proc

/sbin/modprobe crypto_engine
/sbin/modprobe crypto_user
/sbin/modprobe cryptd
/sbin/modprobe cbc
/sbin/modprobe ecb
/sbin/modprobe xts
/sbin/modprobe dm-crypt

/sbin/runwith /sbin/passblk /sbin/udevmod

/sbin/kmount /root /dev/mapper/root ext4

exec /sbin/switchroot /root /sbin/system/start
