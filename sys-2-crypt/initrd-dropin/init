#!/sbin/msh

onexit /fail

/sbin/kmount -vc /dev
reopen /dev/console
/sbin/kmount -vc /sys
/sbin/kmount -vc /proc

/sbin/modprobe crypto_engine
/sbin/modprobe crypto_user
/sbin/modprobe cryptd
/sbin/modprobe cbc
/sbin/modprobe ecb
/sbin/modprobe xts
/sbin/modprobe dm-crypt

/sbin/devinit

waitfor /dev/mapper/control

/sbin/passblk /etc/keys.bin root
/sbin/kmount /root /dev/mapper/root ext4

exec /sbin/switchroot /root /etc/boot/start
